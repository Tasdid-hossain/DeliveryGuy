<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".EditProductActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">





    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/catID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CategoryID"
            android:layout_marginRight="10dp"
            android:textSize="15sp"
            android:layout_marginLeft="20dp"
            android:textColor="@color/colorAccent"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="enter category id"
            android:id="@+id/input_categoryID"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description"
            android:layout_marginRight="10dp"
            android:textSize="15sp"
            android:layout_marginLeft="20dp"
            android:textColor="@color/colorAccent"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="enter description"
            android:id="@+id/input_description"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Image"
            android:layout_marginRight="10dp"
            android:textSize="15sp"
            android:layout_marginLeft="20dp"
            android:textColor="@color/colorAccent"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="enter image url"
            android:id="@+id/input_image"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/nam1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:layout_marginRight="10dp"
            android:textSize="15sp"
            android:layout_marginLeft="20dp"
            android:textColor="@color/colorAccent"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="enter product name"
            android:id="@+id/input_nameProduct"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/pr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price"
            android:layout_marginRight="10dp"
            android:textSize="15sp"
            android:layout_marginLeft="20dp"
            android:textColor="@color/colorAccent"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="enter price"
            android:id="@+id/input_price"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/im1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="More Image1"
            android:layout_marginRight="10dp"
            android:textSize="15sp"
            android:layout_marginLeft="20dp"
            android:textColor="@color/colorAccent"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="enter extra image"
            android:id="@+id/input_image1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/im2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="More Image 2"
            android:layout_marginRight="10dp"
            android:textSize="15sp"
            android:layout_marginLeft="20dp"
            android:textColor="@color/colorAccent"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="enter extra image"
            android:id="@+id/input_image2"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/im3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="More Image 3"
            android:layout_marginRight="10dp"
            android:textSize="15sp"
            android:layout_marginLeft="20dp"
            android:textColor="@color/colorAccent"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="enter extra image"
            android:id="@+id/input_image3"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/im4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="More Image 4"
            android:layout_marginRight="10dp"
            android:textSize="15sp"
            android:layout_marginLeft="20dp"
            android:textColor="@color/colorAccent"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="enter extra image"
            android:id="@+id/input_image4"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Update Product"
            android:id="@+id/update_product"
            android:layout_marginLeft="50dp"
            style="@style/Widget.AppCompat.Button.Colored"
            android:background="#3495eb"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:id="@+id/cancel_product"
            android:layout_marginLeft="30dp"
            style="@style/Widget.AppCompat.Button.Colored"
            android:background="#3495eb"/>
    </LinearLayout>

    </LinearLayout>
    </ScrollView>
</LinearLayout>