<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateCategoryActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:id="@+id/naam"
        android:textSize="20sp"
        android:layout_margin="50dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Name the category"
        android:layout_marginTop="40dp"
        android:layout_toRightOf="@id/naam"
        android:textSize="20sp"
        android:id="@+id/input_name"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Image"
        android:id="@+id/chobi"
        android:textSize="20sp"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="50dp"/>


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Image"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="50dp"
        android:layout_toRightOf="@id/chobi"
        android:textSize="20sp"
        android:id="@+id/input_image"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:layout_below="@id/input_image"
        android:layout_marginLeft="50dp"
        style="@style/Widget.AppCompat.Button.Colored"
        android:background="#3495eb"
        android:id="@+id/submit_category"/>

</RelativeLayout>